{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "noUnusedParameters": true,
    "pretty": true,
    "noEmitOnError": true,
    "lib": [
      "es6"
    ],
    "outDir": "./dist",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": false
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}